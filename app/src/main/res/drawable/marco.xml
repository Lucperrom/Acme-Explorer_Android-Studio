<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa de sombra (simula profundidad) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Marco decorativo -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFEDD5"
                android:endColor="#FCD34D"
                android:angle="45" />
            <stroke
                android:width="16dp"
                android:color="#B45309" />
            <padding
                android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp" />
            <corners android:radius="24dp" />
        </shape>
    </item>

</layer-list>
